@using Degree_Planner.Models.ViewModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Upload course group";
}
@model FileUploadVm

<h2>Upload course group</h2>
@using(Html.BeginForm(FormMethod.Post, new { enctype="multipart/form-data" })) {
    @Html.AntiForgeryToken()
    @Html.LabelFor(m => m.File)
    <br />
    @Html.EditorFor(model => model.File, new { htmlAttributes = new { @class = "form-control-file" } })
    <br />
    @Html.ValidationMessageFor(m => m.File)
    <br /><br />
    <input type="submit" />
}
<h3>Format</h3>
<p>Every row in the CSV file must be of the following format:</p>
<table>
    <thead>
        <tr>
            <th>Column number</th>
            <th>Column data</th>
            <th>Datatype</th>
            <th>Format</th>
            <th>Example(s)</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1</td>
            <td>Course group name</td>
            <td>string</td>
            <td></td>
            <td>CSCE Requirements</td>
            <td>Must be unique across all records</td>
        </tr>
        <tr>
            <td>2 ... n</td>
            <td>Course Identifier</td>
            <td>string</td>
            <td>[4 character department ID][4-5 character catalog number]</td>
            <td>CSCE3613H, MATH3103, CSCE491VH</td>
            <td>Must be unique across all records</td>
        </tr>
    </tbody>
</table>