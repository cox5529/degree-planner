@using Degree_Planner.Models.ViewModels
@{
    ViewData["Title"] = "Frank's Favorite Degree Planner";
}
@model UserLoginVm
@{
    Layout = "../Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-1 col-lg-3"></div>
        <div class="col-sm-10 col-lg-6">
            <img class="rounded d-block mx-auto my-4 img-fluid" src="./images/fantastic-beasts-2.jpg" alt="Title Card">
            <div class="login">


                @using(Html.BeginForm(FormMethod.Post, new { @class = "form-signin" })) {
                    <h1 class="h3 mb-3 font-weight-normal">Please Sign In</h1>
                    @Html.AntiForgeryToken()

                    @Html.LabelFor(m => m.Username)

                    <br />

                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })

                    <br />

                    @Html.LabelFor(m => m.Password)
                    <br />
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                    <br />
                    <br />
                    <div class="checkbox mb-3">
                        <label>
                            @Html.CheckBoxFor(m => m.AGREE)  I agree the <a href="#" onclick="$('#terms').modal()">terms and conditions</a> for Frank's Favorite Degree Planner
                            <br />
                            @Html.ValidationMessageFor(m => m.AGREE, "", new { @class = "text-danger" })
                        </label>
                    </div>
                    <br />
                    <input type="submit" class="btn btn-lg btn-secondary" value="Submit" />
                    @Html.ActionLink("Create account", "CreateAccount")
                    if(!string.IsNullOrEmpty(Model.Message)) {
                        <p class="text-danger">@Model.Message</p>
                    }
                }
            </div>
            <div class="modal fade" id="terms" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="terms-title">Terms of service</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            PUT THE TERMS OF SERVICE HERE
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-1 col-lg-3"></div>
    </div>
</div>
