@using Degree_Planner.Models.ViewModels
@{
    ViewData["Title"] = "Create account";
}
@{
    Layout = "../Shared/_Layout.cshtml";
}
@model CreateAccountVm

<div class = "login">
@using(Html.BeginForm(FormMethod.Post, new {@class = "form-signin"})) {
    <h1>Create account</h1>
    @Html.AntiForgeryToken()
    @Html.LabelFor(m => m.Username)
    <br />
    @Html.TextBoxFor(m => m.Username, new {@class="form-control"})
    @Html.ValidationMessageFor(m => m.Username,"", new {@class="text-danger"})
    <br />
    <br />
    @Html.LabelFor(m => m.Password)
    <br />
    @Html.PasswordFor(m => m.Password, new {@class="form-control"})
    @Html.ValidationMessageFor(m => m.Password,"", new {@class="text-danger"})
    <br />
    <br />
    @Html.LabelFor(m => m.ConfirmPassword, "Confirm Password")
    <br />
    @Html.PasswordFor(m => m.ConfirmPassword, new {@class="form-control"})
    @Html.ValidationMessageFor(m => m.ConfirmPassword,"The Confirm Password field is required. ", new {@class="text-danger"})
    <br />
    <br />
    <input type="submit" value="Create" class="btn btn-lg btn-secondary" />
}
</div>
